<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@drawable/background_input_design">


        <TextView
            android:id="@+id/singleAdminOrderProductId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product: Macbook M1 AIR"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/singleAdminOrderBuyerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer: ahad"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/singleAdminOrderAmountId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount : 5"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/singleAdminOrderPaymentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Status : Pain"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>
        <TextView
            android:clickable="true"
            android:id="@+id/singleAdminOrderReceivedDateId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Received: 20th January, 2022"
            android:textColor="@android:color/black"
            android:textSize="18sp" />



    </LinearLayout>

</androidx.cardview.widget.CardView>